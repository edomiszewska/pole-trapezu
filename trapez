--kod--
pole trapezu

(a+b)*h/2
=====================================================
<?php 
function trapez($a,$b, $h){
    if ($a<=0 || $b<=0 || $h<=0){
        return null;
    }else{
        $pole=($a+$b)*$h/2;
        return $pole;
    }
  
}
echo trapez(2,4,5);

?>
=====================================================
